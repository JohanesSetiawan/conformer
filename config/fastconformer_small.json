{
  "name": "FastConformer-Transducer Small (NVIDIA-style)",
  "description": "Small FastConformer optimized for ~80ms streaming latency",

  "model": {
    "d_input": 80,
    "vocab_size": 29,
    "d_encoder": 256,
    "d_predictor": 256,
    "d_joint": 320,
    "encoder_layers": 17,
    "encoder_heads": 4,
    "encoder_conv_kernel": 9,
    "encoder_ff_expansion": 4,
    "predictor_layers": 2,
    "predictor_kernel": 2,
    "dropout": 0.1,
    "subsampling_channels": 256,
    "use_local_attn": true,
    "local_context": 256,
    "stochastic_depth_prob": 0.1,
    "conv_norm_type": "batch"
  },

  "data": {
    "dataset": "librispeech",
    "data_root": "./data",
    "train_subset": "train-clean-100",
    "val_subset": "dev-clean",
    "sample_rate": 16000,
    "download": true
  },

  "training": {
    "epochs": 100,
    "batch_size": 8,
    "num_workers": 4,
    "lr": 0.001,
    "weight_decay": 1e-6,
    "lr_multiplier": 2.0,
    "warmup_steps": 15000,
    "grad_clip": 0.5,
    "use_amp": true,
    "checkpoint_dir": "./checkpoints/fastconformer_small",
    "debug": false,
    "debug_interval": 50
  },

  "streaming": {
    "chunk_size_ms": 80,
    "left_context_frames": 32,
    "right_context_frames": 0
  },

  "wandb": {
    "enabled": false,
    "project": "fastconformer-transducer",
    "run_name": "fastconformer-small-nvidia"
  }
}
