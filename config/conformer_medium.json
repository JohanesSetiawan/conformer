{
  "model": {
    "name": "conformer_medium",
    "d_input": 80,
    "d_encoder": 256,
    "d_decoder": 640,
    "encoder_layers": 16,
    "decoder_layers": 1,
    "attention_heads": 4,
    "conv_kernel_size": 31,
    "feed_forward_expansion_factor": 4,
    "feed_forward_residual_factor": 0.5,
    "dropout": 0.1,
    "num_classes": 29
  },
  "training": {
    "epochs": 50,
    "batch_size": 8,
    "accumulate_iters": 4,
    "warmup_steps": 25000,
    "weight_decay": 1e-6,
    "variational_noise_std": 0.0001,
    "gradient_clip_value": 1.0,
    "use_amp": true,
    "report_freq": 100
  },
  "data": {
    "data_dir": "./data",
    "train_set": "train-clean-100",
    "test_set": "test-clean",
    "num_workers": 4,
    "smart_batch": true,
    "prefetch_factor": 2
  },
  "checkpoint": {
    "checkpoint_path": "checkpoints/conformer_medium_latest.pt",
    "best_wer_path": "checkpoints/conformer_medium_best_wer.pt",
    "save_dir": "checkpoints",
    "load_checkpoint": false
  },
  "hardware": {
    "distributed": "auto",
    "mixed_precision": true,
    "memory_efficient": true,
    "pin_memory": true,
    "empty_cache_freq": 3
  },
  "wandb": {
    "enabled": false,
    "project": "conformer-asr",
    "run_name": "conformer_medium"
  }
}
